---
import Layout from '../layouts/Layout.astro';
import { SectionHeading, SkillCard, ProjectCard } from '../components/UiComponents';
import { PROFILE, SKILLS, EXPERIENCE } from '../consts';
import { getCollection } from 'astro:content';
import { Database, Code2, BarChart3, ChevronRight, Mail, Briefcase } from 'lucide-react';

const projects = await getCollection('projects');
const sortedProjects = projects.sort((a, b) => a.data.order - b.data.order);

// AI SEO: Structure Data for Person
const schemaData = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": PROFILE.name,
  "url": "https://rajan-portfolio.pages.dev",
  "image": "https://rajan-portfolio.pages.dev/og-image.png", // Placeholder if no image
  "jobTitle": PROFILE.role,
  "worksFor": {
    "@type": "Organization",
    "name": PROFILE.company
  },
  "sameAs": PROFILE.socials.map(s => s.url),
  "knowsAbout": SKILLS.flatMap(s => s.items)
};
---
<Layout title={`${PROFILE.name} | ${PROFILE.role}`}>
    <script type="application/ld+json" is:inline set:html={JSON.stringify(schemaData)} />
    <main class="relative z-10 max-w-6xl mx-auto px-6">
        {/* Hero Section */}
        <section id="home" class="min-h-screen flex items-center justify-center pt-20">
          <div class="max-w-3xl">
            <span class="text-teal-400 font-mono mb-4 block">Hi, my name is</span>
            <h1 class="text-5xl md:text-7xl font-bold text-slate-100 mb-4 tracking-tight">
              {PROFILE.name}.
            </h1>
            <h2 class="text-4xl md:text-6xl font-bold text-slate-400 mb-8">
              I analyze data to build solutions.
            </h2>
            <p class="text-slate-400 text-lg md:text-xl max-w-xl mb-10 leading-relaxed">
              I'm a {PROFILE.role} based in {PROFILE.location}. 
              Currently, I'm analyzing complex datasets at <span class="text-teal-400 font-medium">{PROFILE.company}</span>, 
              focusing on operational efficiency and educational business intelligence.
            </p>
            <div class="flex flex-wrap gap-4">
              <a 
                href={PROFILE.socials[0].url} 
                target="_blank"
                rel="noreferrer"
                class="px-8 py-4 bg-teal-500 text-slate-900 border border-teal-500 rounded font-bold hover:bg-teal-400 transition-all font-mono inline-flex items-center gap-2"
              >
                Hire me on Upwork
              </a>
              <a 
                href="/#projects"
                class="px-8 py-4 bg-teal-500/10 text-teal-400 border border-teal-500/50 rounded hover:bg-teal-500/20 transition-all font-mono inline-block"
              >
                Check my work
              </a>
            </div>
          </div>
        </section>

        {/* About & Skills Section */}
        <section id="about" class="py-24 scroll-mt-24">
            <SectionHeading number="01">About Me</SectionHeading>
            
            <div class="grid md:grid-cols-5 gap-12">
              <div class="md:col-span-3 space-y-6 text-slate-400 leading-relaxed">
                <p>
                  Hello! My name is Rajan and I enjoy translating raw data into meaningful stories. 
                  My journey into data started during my Industrial Engineering degree, where I discovered 
                  the power of <span class="text-teal-400">Operations Research</span> and <span class="text-teal-400">Statistics</span>.
                </p>
                <p>
                  Fast-forward to today, I am working at <span class="text-teal-400">Innovate Nepal Group (ING)</span>, 
                  Nepal's leading investment holding company in education and technology. My work involves leveraging 
                  data to optimize operations across the group's ecosystem of colleges and tech ventures.
                </p>
                <p>
                  Here are a few technologies I've been working with recently:
                </p>
                
                <div class="grid grid-cols-2 gap-4 mt-4 font-mono text-sm">
                  <ul class="space-y-2">
                    <li class="flex items-center gap-2"><ChevronRight size={14} class="text-teal-400"/> Python (Pandas)</li>
                    <li class="flex items-center gap-2"><ChevronRight size={14} class="text-teal-400"/> SQL (Postgres/MySQL)</li>
                    <li class="flex items-center gap-2"><ChevronRight size={14} class="text-teal-400"/> Power BI</li>
                    <li class="flex items-center gap-2"><ChevronRight size={14} class="text-teal-400"/> Google Sheets</li>
                  </ul>
                  <ul class="space-y-2">
                    <li class="flex items-center gap-2"><ChevronRight size={14} class="text-teal-400"/> Tableau</li>
                    <li class="flex items-center gap-2"><ChevronRight size={14} class="text-teal-400"/> Looker Studio</li>
                    <li class="flex items-center gap-2"><ChevronRight size={14} class="text-teal-400"/> Excel Solver</li>
                    <li class="flex items-center gap-2"><ChevronRight size={14} class="text-teal-400"/> Linear Programming</li>
                  </ul>
                </div>
              </div>
  
              <div class="md:col-span-2 space-y-4">
                 <h3 class="text-slate-100 font-bold text-xl mb-4">Skillset</h3>
                 <SkillCard title="Data Analysis" skills={SKILLS[0].items} icon={Database} />
                 <SkillCard title="Programming" skills={SKILLS[1].items} icon={Code2} />
                 <SkillCard title="Visualization" skills={SKILLS[2].items} icon={BarChart3} />
              </div>
            </div>
        </section>

        {/* Experience Section */}
        <section id="experience" class="py-24 max-w-4xl scroll-mt-24">
            <SectionHeading number="02">Where I've Worked</SectionHeading>
            
            <div class="space-y-12">
              {EXPERIENCE.map((job) => (
                <div class="relative pl-8 md:pl-0">
                  <div class="md:hidden absolute left-0 top-0 bottom-0 w-px bg-slate-800">
                    <div class="absolute top-2 -left-1 w-2 h-2 rounded-full bg-teal-500"></div>
                  </div>
  
                  <div class="grid md:grid-cols-4 gap-4 md:gap-8">
                    <div class="md:text-right">
                      <span class="font-mono text-sm text-teal-400/80 block mb-1">{job.period}</span>
                      <span class="text-slate-500 text-sm block">{job.location || 'Nepal'}</span>
                    </div>
                    <div class="md:col-span-3">
                      <h3 class="text-xl font-bold text-slate-100 mb-1">
                        {job.role} <span class="text-teal-400">@ {job.company}</span>
                      </h3>
                      <p class="text-slate-400 leading-relaxed">
                        {job.description}
                      </p>
                    </div>
                  </div>
                </div>
              ))}
            </div>
        </section>

        {/* Projects Section */}
        <section id="projects" class="pt-24 pb-0 scroll-mt-24">
            <SectionHeading number="03">Case Studies</SectionHeading>
            
            <div class="grid md:grid-cols-2 lg:grid-cols-2 gap-6">
                {sortedProjects.map((project) => (
                  <a href={`/projects/${project.slug}`} class="block h-full">
                    <ProjectCard client:visible project={project.data} />
                  </a>
                ))}
            </div>
            
            <div class="mt-12 text-center">
              <button class="text-teal-400 font-mono text-sm hover:underline underline-offset-4">
                View Full Project Archive
              </button>
            </div>
        </section>

        {/* Contact Section */}
        <section id="contact" class="pt-20 pb-10 text-center max-w-2xl mx-auto scroll-mt-24">
            <span class="text-teal-500 font-mono mb-4 block">04. What's Next?</span>
            <h2 class="text-4xl md:text-5xl font-bold text-slate-100 mb-6">Get In Touch</h2>
            <p class="text-slate-400 text-lg mb-10 leading-relaxed">
              I am currently working at ING Group, but my inbox is always open. 
              Whether you have a question about data engineering or just want to say hi, I'll try my best to get back to you!
            </p>
            


            <div class="flex flex-wrap justify-center gap-4">
                <a 
                  href={PROFILE.socials[0].url} 
                  target="_blank"
                  rel="noreferrer"
                  class="inline-flex items-center gap-2 px-8 py-4 bg-teal-500 text-slate-900 rounded font-bold hover:bg-teal-400 transition-all font-mono"
                >
                  <Briefcase size={18} />
                  Hire me on Upwork
                </a>
                <a 
                  href={`mailto:${PROFILE.email}`}
                  class="inline-flex items-center gap-2 px-8 py-4 bg-transparent border border-teal-500 text-teal-400 rounded hover:bg-teal-500/10 transition-all font-mono"
                >
                  <Mail size={18} />
                  Say Hello
                </a>
            </div>
        </section>
    </main>
</Layout>
